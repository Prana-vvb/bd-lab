# Agent name: a1
a1.sources = r1
a1.sinks = k1
a1.channels = c1

# Source: monitor input dir
a1.sources.r1.type = spooldir
a1.sources.r1.spoolDir = /home/$username/flume-test/input

# Sink: write to output dir
a1.sinks.k1.type = file_roll
a1.sinks.k1.sink.directory = /home/$username/flume-test/output

# Channel
a1.channels.c1.type = memory
a1.channels.c1.capacity = 1000
a1.channels.c1.transactionCapacity = 100

# Bind them
a1.sources.r1.channels = c1
a1.sinks.k1.channel = c1
